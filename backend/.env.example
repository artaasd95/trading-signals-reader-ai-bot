# =============================================================================
# Crypto Trading Bot - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your settings
# NEVER commit .env file to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
API_V1_STR=/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://trading_bot:password@localhost:5432/trading_bot_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trading_bot_db
DATABASE_USER=trading_bot
DATABASE_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# InfluxDB (Time-series data)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=trading-bot
INFLUXDB_BUCKET=market-data

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================
# Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true

# Coinbase Pro
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key
COINBASE_PASSPHRASE=your-coinbase-passphrase
COINBASE_SANDBOX=true

# Kraken
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_SECRET_KEY=your-kraken-secret-key

# Bybit
BYBIT_API_KEY=your-bybit-api-key
BYBIT_SECRET_KEY=your-bybit-secret-key
BYBIT_TESTNET=true

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Hugging Face (Optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================
# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# RabbitMQ (Alternative)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key

# HashiCorp Vault (Production)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_MOUNT_POINT=secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry
SENTRY_DSN=your-sentry-dsn

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/trading_bot.log

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk Management
MAX_POSITION_SIZE=0.1
MAX_DAILY_LOSS=0.05
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.06
MAX_OPEN_POSITIONS=5

# Trading Settings
DEFAULT_TRADING_PAIR=BTC/USDT
MIN_ORDER_SIZE=10
MAX_ORDER_SIZE=10000
SLIPPAGE_TOLERANCE=0.001

# Paper Trading
PAPER_TRADING=true
INITIAL_BALANCE=10000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
RELOAD=true
DEBUG_SQL=false
PROFILING_ENABLED=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_TRADING=true
ENABLE_TELEGRAM_BOT=true
ENABLE_WEB_INTERFACE=true
ENABLE_MOBILE_APP=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# CoinGecko API
COINGECKO_API_KEY=your-coingecko-api-key

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# News API
NEWS_API_KEY=your-news-api-key

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
MOBILE_APP_VERSION=1.0.0
MOBILE_FORCE_UPDATE=false
MOBILE_MAINTENANCE_MODE=false

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.tradingbot.app

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_trading_bot
TEST_REDIS_URL=redis://localhost:6379/15
TEST_OPENAI_API_KEY=test-openai-key