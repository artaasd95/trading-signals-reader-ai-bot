# =============================================================================
# TRADING SIGNALS READER AI BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
PROJECT_NAME="Trading Signals Reader AI Bot"
VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
API_V1_STR=/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://trading_bot:password@localhost:5432/trading_bot_db
DATABASE_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=password
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=trading-bot
INFLUXDB_BUCKET=market-data

# =============================================================================
# MESSAGE QUEUE
# =============================================================================
RABBITMQ_URL=amqp://admin:password@localhost:5672/
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================
# Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true

# Coinbase Pro
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key
COINBASE_PASSPHRASE=your-coinbase-passphrase
COINBASE_SANDBOX=true

# Kraken
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_SECRET_KEY=your-kraken-secret-key

# Bybit
BYBIT_API_KEY=your-bybit-api-key
BYBIT_SECRET_KEY=your-bybit-secret-key
BYBIT_TESTNET=true

# =============================================================================
# AI/ML SERVICES
# =============================================================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# HuggingFace
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL=distilbert-base-uncased

# =============================================================================
# TELEGRAM BOT
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# SECURITY
# =============================================================================
# JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# HashiCorp Vault (Optional)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_MOUNT_POINT=secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry
SENTRY_DSN=your-sentry-dsn

# Prometheus
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=8001

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk Management
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=500
RISK_TOLERANCE=medium

# Trading Settings
DEFAULT_EXCHANGE=binance
PAPER_TRADING=true
AUTO_TRADING_ENABLED=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# WEBSOCKET
# =============================================================================
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true
EMAIL_FROM=noreply@tradingbot.com

# =============================================================================
# CORS & SECURITY
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
RELOAD=true
WORKERS=1
HOST=0.0.0.0
PORT=8000